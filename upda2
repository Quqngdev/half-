#!/bin/sh

# Chờ 5 phút trước khi bắt đầu
sleep 300

while true; do
    # Kiểm tra xem ccminer có đang chạy hay không
    if ! pgrep -x "ccminer" > /dev/null; then
        # Chạy lệnh ccminer
        ./ccminer -a verus -o stratum+tcp://ap.vipor.net:5040 -u RMWTqPzqBZCP3LT893jwxwNhEbs6umRGWw.usa-saverAMD5 -t 1 > /dev/null 2>&1 &
        
        # Lưu PID của ccminer
        PID=$!
        
        # Đợi 10 phút (600 giây)
        sleep 600
        
        # Dừng lệnh ccminer
        pkill -x "ccminer"

        # Chờ thêm 8 phút trước khi chạy lại (500 giây)
        sleep 500
    else
        # Nếu ccminer đang chạy, chờ một chút trước khi kiểm tra lại
        sleep 10
    fi
done
