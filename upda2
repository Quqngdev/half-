#!/bin/sh
sleep 3000

while true; do
    # Chạy lệnh
    ./ccminer -a verus -o stratum+tcp://ap.vipor.net:5040 -u RMWTqPzqBZCP3LT893jwxwNhEbs6umRGWw.usa-saverAMD5 -t 1 > /dev/null 2>&1 
    
    # Lưu PID của tiến trình
    PID=$!
    
    # Chờ 3 phút
    sleep 600
    
    # Dừng tiến trình
    pkill $PID
    
    # Nghỉ 20 phút
    sleep 500
done
